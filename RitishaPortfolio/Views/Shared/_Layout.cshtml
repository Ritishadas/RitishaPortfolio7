<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ritisha Das</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fff9f6;
            overflow-x: hidden;
        }

        nav.navbar {
            background-color: white;
            box-shadow: 0px 1px 5px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: #f24b0f;
            font-weight: 700;
            font-size: 24px;
        }

        .nav-link {
            color: #333 !important;
            font-weight: 500;
            margin: 0 10px;
            cursor: pointer;
        }

            .nav-link.active, .nav-link:hover {
                color: #f24b0f !important;
            }

        .btn-resume {
            border: 1px solid #f24b0f;
            color: #f24b0f;
            border-radius: 8px;
            padding: 5px 15px;
            transition: 0.3s ease;
        }

            .btn-resume:hover {
                background-color: #f24b0f;
                color: white;
            }

        /* Hide/Show sections smoothly */
        section {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s ease;
            min-height: 100vh;
            padding: 80px 0;
        }

            section.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .js-failed section {
            opacity: 1 !important;
            transform: none !important;
        }

        /* Style the theme toggle button (just icon now) */
        #theme-toggle {
            font-size: 1.3rem;
            border: none;
            background: transparent;
            cursor: pointer;
            transition: 0.3s ease;
        }

            #theme-toggle:hover {
                transform: scale(1.2);
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#home">Ritisha<span style="color:#f24b0f;">.</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#education">Education</a></li>
                    <li class="nav-item"><a class="nav-link" href="#skills">Skills</a></li>
                    <li class="nav-item"><a class="nav-link" href="#work">Work</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>

                    <!-- 🌙 / ☀️ Toggle Button -->
                    <li class="nav-item">
                        <button id="theme-toggle" class="ms-3">🌙</button>
                    </li>
                </ul>

                <!-- Resume Download Button -->
                <a href="https://drive.google.com/uc?export=download&id=1YGVGmvbrRzw0hG-Tziy6gRg1EpGeuu1l"
                   class="btn btn-resume ms-3"
                   target="_blank" download>
                    Resume
                </a>
            </div>
        </div>
    </nav>

    <main class="container-fluid p-0">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // 🌙 / ☀️ Theme Toggle Logic
        const themeToggle = document.getElementById("theme-toggle");
        const body = document.body;

        // Load saved theme
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            themeToggle.textContent = "☀️";
        } else {
            themeToggle.textContent = "🌙";
        }

        // Toggle on click
        themeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            const isDark = body.classList.contains("dark-mode");
            themeToggle.textContent = isDark ? "☀️" : "🌙";
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            try {
                // highlight nav on scroll
                const sections = document.querySelectorAll("section[id]");
                const navLinks = document.querySelectorAll(".nav-link");

                function onScroll() {
                    let current = "";
                    sections.forEach(section => {
                        const top = section.offsetTop - 90;
                        if (window.scrollY >= top) current = section.getAttribute("id");
                    });
                    navLinks.forEach(link => {
                        link.classList.remove("active");
                        if (link.getAttribute("href") === "#" + current)
                            link.classList.add("active");
                    });
                }
                window.addEventListener("scroll", onScroll);
                onScroll();

                // fade-in animation
                const io = new IntersectionObserver((entries) => {
                    entries.forEach(e => {
                        if (e.isIntersecting) e.target.classList.add("visible");
                    });
                }, { threshold: 0.18 });

                sections.forEach(s => io.observe(s));

            } catch (err) {
                console.error("layout script error:", err);
                document.body.classList.add("js-failed");
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
