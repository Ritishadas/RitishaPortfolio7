@{
    ViewData["Title"] = "Education";
}

<div class="education-section">
    <div class="container text-center">
        <h2 class="fw-bold mb-5" style="color:#f24b0f;">Education</h2>

        <div class="timeline position-relative">

            <!-- B.Tech -->
            <div class="timeline-item d-flex mb-5">
                <div class="timeline-dot"></div>
                <div class="timeline-content p-4 shadow-sm text-start">
                    <h5 class="fw-bold mb-1">Bachelor of Technology (B.Tech) in Information Technology</h5>
                    <p class="text-danger mb-1">Maulana Abul Kalam Azad University of Technology</p>
                    <small class="text-muted d-block mb-2">2021 – 2025</small>
                    <p class="text-secondary mb-0">
                        CGPA: 8.45 — focusing on web development, software engineering, and user experience design.
                    </p>
                </div>
            </div>

            <!-- Class 12 -->
            <div class="timeline-item d-flex mb-5">
                <div class="timeline-dot"></div>
                <div class="timeline-content p-4 shadow-sm text-start">
                    <h5 class="fw-bold mb-1">Higher Secondary Education (Class 12)</h5>
                    <p class="text-danger mb-1">B.E. College Model School, Howrah</p>
                    <small class="text-muted d-block mb-2">2019 – 2021</small>
                    <p class="text-secondary mb-0">
                        Completed with a strong foundation in Science.
                    </p>
                </div>
            </div>

            <!-- Class 10 -->
            <div class="timeline-item d-flex mb-5">
                <div class="timeline-dot"></div>
                <div class="timeline-content p-4 shadow-sm text-start">
                    <h5 class="fw-bold mb-1">Secondary Education (Class 10)</h5>
                    <p class="text-danger mb-1">B.E. College Model School, Howrah</p>
                    <small class="text-muted d-block mb-2">2007 – 2019</small>
                    <p class="text-secondary mb-0">
                       Completed with a solid foundation in mathematics and computer science.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
